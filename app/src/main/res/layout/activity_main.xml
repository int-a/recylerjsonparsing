<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.inta.anthony.recylerjsonparsing.MainActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/card_recyler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/switch_layout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/switchLayoutButton"/>

    <Button
        android:id="@+id/reverse_layout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reverseLayoutButton"/>

    <Button
        android:id="@+id/view_pager_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/viewPagerButton"/>

</LinearLayout>
